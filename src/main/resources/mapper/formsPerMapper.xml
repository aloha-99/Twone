<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.shinjin.twone.dao.FormsPerDAO" >


  <!-- 담당자 이슈폼 생성 -->
  <insert id="addFormsPer" useGeneratedKeys="true" keyProperty="perSeq" parameterType="FormsPerDTO">
    <selectKey keyProperty="perSeq" resultType="String" order="BEFORE">
      SELECT nextval('per_seq') FROM dual
    </selectKey>
    INSERT INTO t_forms_per
    VALUES (CONCAT('per-', #{perSeq}), '담당자', #{memSeq})
  </insert>

  <!-- perTitle 변경 -->
  <update id="updatePerTitle" parameterType="FormsPerDTO">
    UPDATE t_forms_per
    SET per_title = #{perTitle}
    WHERE per_seq = #{perSeq}
  </update>

  <!-- memSeq 변경 -->
  <update id="updateMemSeq" parameterType="FormsPerDTO">
    UPDATE t_forms_per
    SET mem_seq = #{memSeq}
    WHERE per_seq = #{perSeq}
  </update>

  <!-- FormsPerDTO 불러오기 -->
  <select id="getPerDTO" parameterType="String" resultType="FormsPerDTO">
    SELECT *
    FROM t_forms_per
    WHERE per_seq = #{perSeq}
  </select>

</mapper>